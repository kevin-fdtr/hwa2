{
  "url": "/carts",
  "methods": [
    {
      "method": "get",
      "name": "list items in a cart",
      "requiredHeaderParameters": ["token"],
      "requiredQueryParameters": ["emailAddress"],
      "requiredBodyData": [],
      "responseBody": {
        "items": [
          {
            "name": "id",
            "type": "string"
          },          
          {
            "name": "quantity",
            "type": "number"
          }
        ]
      }
    },
    {
      "method": "post",
      "name": "create cart with items or replace items in cart",
      "requiredHeaderParameters": ["token"],
      "requiredQueryParameters": ["emailAddress"],
      "requiredBodyData": {
        "items": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "quantity",
            "type": "number"
          }
        ]
      },
      "optionalBodyData": [],
      "responseBody": {
        "items": [
          {
              "name": "id",
              "type": "string"
          },
          {
            "name": "quantity",
            "type": "number"
          }
        ]
      }
    },
    {
      "method": "delete",
      "name": "remove item(s) from a cart",
      "requiredHeaderParameters": ["token"],
      "requiredQueryParameters": ["emailAddress"],
      "requiredBodyData": {
        "items": [
          {
              "name": "id",
              "type": "string"
          }
        ]
      },
      "responseBody": {
        "deletedItems": [
          {
              "name": "id",
              "type": "string"
          }
        ]
      }
    }
  ]
}